<% include ./partial/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-10">
        <% posts.forEach(function(elem){ %>
            <div class="card w-32">
                <div class="w-full h-40 bg-red-200 border-2 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="#">
                </div>
                <h5 class="text-sm mt-2"><%= elem.title %></h5>
                <h6 class="text-sm text-red-500 font-semibold opacity-50">@<%= elem.user.username %></h6>
            </div>
        <% }) %>
    </div>
</div>
<% include ./partial/footer.ejs %>